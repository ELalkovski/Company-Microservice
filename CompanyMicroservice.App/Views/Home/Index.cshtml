@{
    ViewData["Title"] = "Home Page";
}

<section id="home" class="text-center">
    <div class="templatemo_headerimage">
        <div class="flexslider">
            <ul class="slides">
                <li>
                    <img src="~/images/1.jpg" alt="Slide 1">
                    <div class="slider-caption">
                        <div class="templatemo_homewrapper">
                            <h1 class="wow fadeInDown" data-wow-delay="2000">Welcome to Solution</h1>
                            <h2 class="wow fadeInDown" data-wow-delay="2000">
                                <span>The best Company Microservice</span>
                            </h2>
                            <a asp-area="" asp-controller="Companies" asp-action="Index" class="smoothScroll btn btn-default wow fadeInDown" data-wow-delay="2000">Companies</a>	
                        </div>
                    </div>
                </li>
                <li>
                    <img src="~/images/2.jpg" alt="Slide 2">
                    <div class="slider-caption">
                        <div class="templatemo_homewrapper">
                            <h1 class="wow fadeInDown" data-wow-delay="2000">Welcome to Solution</h1>
                            <h2 class="wow fadeInDown" data-wow-delay="2000">
                                <span>The best Company Microservice</span>
                            </h2>
                            <a asp-area="" asp-controller="Companies" asp-action="Index" class="smoothScroll btn btn-default wow fadeInDown" data-wow-delay="2000">Companies</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>				
</section>
<div id="service">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <div class="media">
                    <div class="media-object media-left wow fadeIn" data-wow-delay="0.1s">
                        <i class="fa fa-laptop"></i>
                    </div>
                    <div class="media-body wow fadeIn">
                        <h3 class="media-heading">Fully Responsive</h3>
                        <p>This website is fully responsive even on the smallest display.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="media">
                    <div class="media-object media-left wow fadeIn" data-wow-delay="0.3s">
                        <i class="fa fa-cog"></i>
                    </div>
                    <div class="media-body wow fadeIn">
                        <h3 class="media-heading">Customize Easily</h3>
                        <p>You can easily manipulate companies and employees data.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="media">
                    <div class="media-object media-left wow fadeIn" data-wow-delay="0.4s">
                        <i class="fa fa-comments-o"></i>
                    </div>
                    <div class="media-body wow fadeIn" data-wow-delay="0.3s">
                        <h3 class="media-heading">Quick Support</h3>
                        <p>Feel free to contact the admins at any time if you have any questions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>