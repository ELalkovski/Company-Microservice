@model CompanyMicroservice.Common.ViewModels.EmployeeVm
@{
    ViewData["Title"] = "Edit Employee";
}

<div id="edit-company">
    <div class="container custom-container">
        <div class="row" style="margin-bottom: 10em">
            <div class="col-md-8">
                <h3>@ViewData["Title"]</h3>
                <hr />
                <form asp-controller="Employees" asp-action="Edit" method="post">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.CompanyId)
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input type="text" asp-for="FullName" class="form-control"/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary"></label>
                        <input type="number" asp-for="Salary" placeholder="0.00" class="form-control">
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VacationDays"></label>
                        <input type="number" asp-for="VacationDays" class="form-control">
                        <span asp-validation-for="VacationDays" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartingDate"></label>
                        <input type="date" asp-for="StartingDate" class="form-control"/>
                        <span asp-validation-for="StartingDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExperienceLevelId">Experience Level</label>
                        <select asp-for="ExperienceLevelId" class="form-control"
                                asp-items="@(new SelectList(Model.AvailableLevels, "Id", "Type"))">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="ExperienceLevelId" class="text-danger">Please select valid experience level.</span>
                    </div>
                    <button type="submit" class="btn btn-warning pull-right">
                        <i class="fa fa-edit"></i>
                        Edit Employee
                    </button>
                    <a asp-controller="Employees"
                       asp-action="Details"
                       asp-route-employeeId="@Model.Id" class="btn btn-info pull-right" style="margin-right: 10px">
                        <i class="fa fa-undo"></i>
                        Back
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
