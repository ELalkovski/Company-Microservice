@model CompanyMicroservice.Common.ViewModels.CompanyVm
@{
    ViewData["Title"] = "Edit Company";
}

<div id="edit-company">
    <div class="container custom-container">
        <div class="row">
            <div class="col-md-8">
                <h3>@ViewData["Title"]</h3>
                <hr />
                <form asp-controller="Companies" asp-action="Edit" method="post">
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Information"></label>
                        <textarea type="text" asp-for="Information" class="form-control"></textarea>
                        <span asp-validation-for="Information" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyLogo">Company Logo</label>
                        <input type="text" asp-for="CompanyLogo" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-warning pull-right">
                        <i class="fa fa-edit"></i>
                        Edit Company
                    </button>
                    <a asp-controller="Companies" 
                       asp-action="Details" 
                       asp-route-companyId="@Model.Id" class="btn btn-info pull-right" style="margin-right: 10px">
                        <i class="fa fa-undo"></i>
                        Back
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>