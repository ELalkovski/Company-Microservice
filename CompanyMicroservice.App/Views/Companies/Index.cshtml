@model ICollection<CompanyMicroservice.Common.ViewModels.CompanyVm>
@{
    ViewData["Title"] = "Companies List";
}

<div id="companies-list">
    <div class="container custom-container">
        <div class="row">
            <div class="col-md-12">
                <h3>@ViewData["Title"]</h3>
                <div id="success-msg-companies" class="alert alert-success" style="display: none">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <a asp-controller="Companies" 
                           asp-action="Add" class="btn btn-success" style="margin-right: 10px">
                            <i class="fa fa-plus"></i>
                            Add Company
                        </a>
                        <a asp-controller="Home" 
                           asp-action="Index" class="btn btn-info" style="margin-right: 10px">
                            <i class="fa fa-undo"></i>
                            Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @if (Model.Any())
                {
                    <div id="companies">
                        <div class="container">
                            <div class="row">
                                @Html.DisplayFor(m => m)
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <h4>There is no companies.</h4>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let successMsg = '@TempData["SuccessMsg"]';
        displayMsg(successMsg, 'success-msg-companies');
    </script>
}